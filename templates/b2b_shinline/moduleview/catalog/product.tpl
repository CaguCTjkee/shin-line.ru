{addjs file="jcarousel/jquery.jcarousel.min.js"}{addjs file="jquery.changeoffer.js?v=2"}{addjs file="product.js"}{assign var=shop_config value=ConfigLoader::byModule('shop')}{assign var=check_quantity value=$shop_config.check_quantity}{assign var=catalog_config value=$this_controller->getModuleConfig()}{if $product->isVirtualMultiOffersUse()} {* Если используются виртуальные многомерные комплектации *}    {addjs file="history.min.js" basepath="common"}    {addjs file="jquery.virtualmultioffers.js"}{/if}{assign var=titleclean value=$app->title->clean()}{assign var=titles value=$app->title->addSection($product->title|cat:' купить в Краснодаре - интернет-магазин Shin-Line.ru')}{$xfvalue_type = $product->getPropertyValueByTitle('Тип товара')}{$xfvalue_brand = $product->getPropertyValueByTitle('Производитель')}{$xfvalue_width = $product->getPropertyValueByTitle('Ширина шины')}{$xfvalue_height = $product->getPropertyValueByTitle('Высота шины')}{$xfvalue_radius = $product->getPropertyValueByTitle('Радиус товара')}{$xfvalue_model = $product->getPropertyValueByTitle('Модель товара')}{$xfvalue_lindex = $product->getPropertyValueByTitle('Индекс нагрузки шины')}{$xfvalue_sindex = $product->getPropertyValueByTitle('Индекс скорости шины')}{$xfvalue_plies = $product->getPropertyValueByTitle('Слойность шины')}{$xfvalue_applicability = $product->getPropertyValueByTitle('Применяемость грузового колеса')}{if $xfvalue_applicability == 'Универсальное'}    {assign var=xfvalue_applicability_id value=1}    {assign var=xfvalue_applicability_eng value='universal'}{else if $xfvalue_applicability == 'Ведущие'}    {assign var=xfvalue_applicability_id value=2}    {assign var=xfvalue_applicability_eng value='leading'}{else if $xfvalue_applicability == 'Прицепная'}    {assign var=xfvalue_applicability_id value=3}    {assign var=xfvalue_applicability_eng value='trailers'}{else if $xfvalue_applicability == 'Рулевые'}    {assign var=xfvalue_applicability_id value=4}    {assign var=xfvalue_applicability_eng value='steering'}{else}    {assign var=xfvalue_applicability_id value=0}{/if}{$xfvalue_krepeg = $product->getPropertyValueByTitle('Количество болтов')}{$xfvalue_pcd = $product->getPropertyValueByTitle('Расстояние между болтами')}{$xfvalue_dheight = $product->getPropertyValueByTitle('Ширина диска')}{$xfvalue_dcolor = $product->getPropertyValueByTitle('Цвет диска')}{$xfvalue_dia = $product->getPropertyValueByTitle('Ступица')}{$xfvalue_et = $product->getPropertyValueByTitle('Вылет диска')}{$xfvalue_type = $product->getPropertyValueByTitle('Тип товара')}{$xfvalue_runflat = $product->getPropertyValueByTitle('RunFlat')}{if $xfvalue_type == 'Летняя шина' || $xfvalue_type == 'Зимняя шина' || $xfvalue_type == 'Сельхозшина'}    {assign var=podbor value='tire'}{else if $xfvalue_type == 'Литой диск' || $xfvalue_type == 'Штампованный диск'}    {assign var=podbor value='disk'}    {assign var=titleclean value=$app->title->clean()}    {assign var=titles value=$app->title->addSection($xfvalue_type|cat:' '|cat:$product->title|replace:'Диск ':''|cat:' купить в Краснодаре - интернет-магазин Shin-Line.ru')}{else if $xfvalue_type == 'Грузовая шина'}    {assign var=podbor value='truck'}{/if}<div class="back__link hidden-sm hidden-md hidden-lg">    <a href="/tire_catalog/"><i class="fa fa-arrow-circle-o-left" aria-hidden="true"></i>  Вернуться в каталог</a></div><div class="product__details productItem hproduct{if !$product->isAvailable()} notAvaliable{/if}{if $product->canBeReserved()} canBeReserved{/if}{if $product.reservation == 'forced'} forcedReserve{/if}" data-id="{$product.id}">    <div class="product__details-pic col-xs-12 col-sm-6 col-md-5 col-lg-4">        <div class="image">            {hook name="catalog-product:images" title="{t}Карточка товара:изображения{/t}"}                <span class="labels">                    {foreach from=$product->getMySpecDir() item=spec}                        {if $spec.image}                            <img src="{$spec->__image->getUrl(62,62, 'xy')}">                        {/if}                    {/foreach}                </span>            {if !$product->hasImage()}                {$main_image=$product->getMainImage()}                <span class="mainPicture"><img src="{$main_image->getUrl(310,310,'xy')}" class="photo" alt="{$main_image.title|default:"{$product.title}"}"/></span>            {else}                {* Главные фото *}                {assign var=images value=$product->getImages()}                {if $product->isOffersUse()}                    {* Назначенные фото у первой комлектации *}                    {$offer_images=$product.offers.items[0].photos_arr}                {/if}                {foreach from=$images key=key item=image name=biglist}                    <a href="{$image->getUrl(800,600,'xy')}" data-n="{$key}" data-id="{$image.id}" class="photo mainPicture viewbox {if ($offer_images && ($image.id!=$offer_images.0)) || (!$offer_images && !$image@first)} hidden{/if}" {if ($offer_images && in_array($image.id, $offer_images)) || (!$offer_images)}rel="bigphotos"{/if}><img src="{$image->getUrl(310,310,'xy')}" alt="{$image.title|default:"{$product.title} {t}фото{/t} {$key+1}"}"></a>                {/foreach}                {* Нижняя линейка фото                {if count($images)>1}                <div class="productGalleryWrap">                <div class="gallery">                <ul>                {foreach from=$product->getImages() key=key item=image}                <li data-id="{$image.id}" class="{if $offer_images && !in_array($image.id, $offer_images)}hidden{/if}"><a href="{$image->getUrl(800,600,'xy')}" data-n="{$key}" target="_blank" class="preview"><img src="{$image->getUrl(64,64)}"></a></li>                {/foreach}                </ul>                </div>                <a class="control prev"></a>                <a class="control next"></a>                </div>                {/if}                *}            {/if}            {/hook}        </div>    </div>    <div class="product__details-main col-xs-12 col-sm-6 col-md-7 col-lg-8">        <h1 class="h2">{$product.title}</h1>        {if $xfvalue_model != ''}            <span class="marks">Модель: <a href="/{$podbor}_catalog/model/{$xfvalue_model}/">{$xfvalue_model}</a></span>        {/if}        {if $product.brand_id}            <span class="comment">Производитель: <a class="brandTitle" href="/{$podbor}_catalog/{$product->getBrand()->title}/">{$product->getBrand()->title}</a></span>        {/if}        {hook name="catalog-product:price" title="{t}Карточка товара:цены{/t}"}            {* Блок с ценой *}            <div itemprop="offers" itemscope itemtype="http://schema.org/Offer" class="fcost">                {assign var=last_price value=$product->getOldCost()}                {if $last_price>0}<div class="lastPrice">{$last_price}</div>{/if}                <span itemprop="price" class="myCost price" content="{$product->getCost(null, null, false)}">{$product->getCost()} {$product->getCurrency()}</span>                <span itemprop="priceCurrency" class="hidden">{$product->getCurrencyCode()}</span>            </div>            {* Если включена опция единицы измерения в комплектациях *}        {if $catalog_config.use_offer_unit && $product->isOffersUse()}            <span class="unitBlock">/ <span class="unit">{$product.offers.items[0]->getUnit()->stitle}</span></span>        {/if}        {/hook}        {hook name="catalog-product:action-buttons" title="{t}Карточка товара:кнопки{/t}"}            {* Кнопки действия *}        {if $shop_config}            <a data-href="{$router->getUrl('shop-front-cartpage', ["add" => $product.id])}" class="toBasket addToCart basket-button">В корзину</a>            <a data-href="{$router->getUrl('shop-front-reservation', ["product_id" => $product.id])}" class="inDialog reserve hidden basket-button">Заказать</a>            <span class="unobtainable hidden">Нет в наличии</span>        {/if}        {if !$shop_config || (!$product->shouldReserve() && (!$check_quantity || $product.num>0))}            {if $catalog_config.buyinoneclick }                <a href="#" data-href="{$router->getUrl('catalog-front-oneclick',["product_id"=>$product.id,"offer_id"=>0])}" title="Купить в 1 клик" class="oneclick buyOneClick inDialog call-button"><i class="fa fa-phone" aria-hidden="true"></i> Купить в 1 клик</a>            {/if}        {/if}            <div class="compare__link">                <a href="#" class="compare {if $product->inCompareList()} inCompare{/if}">Cравнить</a>            </div>        {/hook}    </div>    <div class="product__details-other col-xs-12 col-sm-6 col-md-7 col-lg-7">        <div class="visible-xs">            {* Сравнение товара *}            {moduleinsert name="Catalog\Controller\Block\Compare"}        </div>        <div class="parameters">            {hook name="catalog-product:properties" title="{t}Карточка товара:характеристики{/t}"}            {foreach from=$product.offers.items key=key item=offer name=offers}                {if $offer.propsdata_arr}                    <div class="offerProperty{if $key>0} hidden{/if}" data-offer="{$key}">                        <div class="h3-title">{t}Характеристики комплектации{/t}</div>                        <p>                            {foreach from=$offer.propsdata_arr key=pkey item=pval}                                <span class="key">{$pkey}</span>: <b class=""value>{$pval}</b><br>                            {/foreach}                        </p>                    </div>                {/if}            {/foreach}                <div class="propertyGroup">                    <p>                        {if $xfvalue_width != '' || $xfvalue_height != '' && $xfvalue_radius != ''}                            Типоразмер: <b>                            {if $xfvalue_type == 'Грузовая шина'}                                <a href="/truck_catalog/all/{$xfvalue_width}-{$xfvalue_height}-{$xfvalue_radius}/{if $xfvalue_applicability_eng != ''}{$xfvalue_applicability_eng}/{/if}">{$xfvalue_width}/{$xfvalue_height}/{$xfvalue_radius}</a>                            {else}                                <a href="/tire_catalog/all/{if $xfvalue_type == 'Летняя шина'}summer{elseif $xfvalue_type == 'Зимняя шина'}winter{else}all{/if}/{$xfvalue_width}-{$xfvalue_height}-{$xfvalue_radius}/">{$xfvalue_width}/{$xfvalue_height}/{$xfvalue_radius}</a>                            {/if}                        </b><br>                        {/if}                        {if $xfvalue_width == '' || $xfvalue_height == '' && $xfvalue_radius != ''}                            Диаметр: <b>                            <a href="/disk_catalog/all/size/{$xfvalue_radius}x*/">{$xfvalue_radius}</a>                        </b><br>                        {/if}                        {if $xfvalue_lindex}Индекс нагрузки: <b>{$xfvalue_lindex}</b><br>{/if}                        {if $xfvalue_sindex}Индекс скорости: <b>{$xfvalue_sindex}</b><br>{/if}                        {if $xfvalue_applicability != ''}Применяемость грузового колеса: <b>{$xfvalue_applicability}</b><br>{/if}                        {if $xfvalue_plies}Слойность шины: <b>{$xfvalue_plies}</b><br>{/if}                        {if $xfvalue_type == 'Летняя шина' || $xfvalue_type == 'Зимняя шина'}Сезонность: <b>{if $xfvalue_type == 'Летняя шина'}Летняя{elseif $xfvalue_type == 'Зимняя шина'}Зимняя{/if}</b><br>{/if}                        {if $xfvalue_dheight}Ширина диска: <b>{$xfvalue_dheight}</b><br>{/if}                        {if $xfvalue_krepeg}Количество болтов: <b>{$xfvalue_krepeg}{if $xfvalue_pcd != ''}x{$xfvalue_pcd}{/if}</b><br>{/if}                        {if $xfvalue_et}Вылет диска: <b>{$xfvalue_et}</b><br>{/if}                        {if $xfvalue_dia}Ступица: <b>{$xfvalue_dia}</b><br>{/if}                        {if $xfvalue_dcolor}Цвет диска: <b>{$xfvalue_dcolor}</b><br>{/if}                        {if $xfvalue_runflat}RunFlat: <b>{$xfvalue_runflat}</b><br>{/if}                    </p>                </div>            {/hook}        </div>        {* Блок с сопутствующими товарами *}        {if $shop_config}            {moduleinsert name="\Shop\Controller\Block\Concomitant"}        {/if}        {* Подгружаем остатки по складам, т.к. при смене комплектации        будет изменяться и отображение остатков *}        {$product->fillOffersStockStars()}        {hook name="catalog-product:stock" title="{t}Карточка товара:остатки{/t}"}            {* Вывод наличия на складах *}        {assign var=stick_info value=$product->getWarehouseStickInfo()}        {if !empty($stick_info.warehouses)}            <div class="warehouseDiv">                <div class="h3-title">{t}Наличие{/t}</div>                <table width="100%">                    {foreach from=$stick_info.warehouses item=warehouse}                        <tr class="bbe7">                            <td><a href="{$warehouse->getUrl()}">{$warehouse.title}</a></td>                            <td class="text-right">                                {if $product.offers.items.0.stock_num[$warehouse.id] > 4}                                    В наличии                                {elseif $product.offers.items.0.stock_num[$warehouse.id] < 5 && $product.offers.items.0.stock_num[$warehouse.id] > 0}                                    {$product.offers.items.0.stock_num[$warehouse.id]} шт.                                {else}                                    Нет в наличии                                {/if}                            </td>                        </tr>                    {/foreach}                </table>            </div>        {/if}        {/hook}        {if !empty($product.description)}            <div class="description">                <div class="h3-title">{t}Описание{/t}</div>                {hook name="catalog-product:description" title="{t}Карточка товара:описание{/t}"}                    <p class="description">                        {$product.description}                    </p>                {/hook}            </div>        {/if}    </div>    <div class="clearfix"></div></div><div class="product__similar col-xs-12">    {if $podbor == 'tire' || $podbor == 'truck' }        {moduleinsert name="\Podbor\Controller\Block\Sameproducts" id="{$product.id}" w="{$xfvalue_width}" h="{$xfvalue_height}" r="{$xfvalue_radius}" season="{$xfvalue_type}"}    {elseif $podbor == 'disk'}        {moduleinsert name="\Podbor\Controller\Block\Sameproducts" id="{$product.id}" podbor="$podbor" krepeg="{$xfvalue_krepeg}" pcd="{$xfvalue_pcd}" dia="{$xfvalue_dia}"}    {/if}</div><div class="product__seen col-xs-12">    {* Блок с просмотренными товарами *}    {if $shop_config}        {moduleinsert name="\Catalog\Controller\Block\LastViewed"}    {/if}</div>